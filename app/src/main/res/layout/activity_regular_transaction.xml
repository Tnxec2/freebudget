<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegularTransactionActivity">

    <EditText
        android:id="@+id/editText_description_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_transaction_name"
        app:layout_constraintBottom_toTopOf="@id/acTextView_category_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/acTextView_category_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:hint="@string/activity_category"
        app:layout_constraintBottom_toTopOf="@id/editText_amount_regular"
        app:layout_constraintEnd_toStartOf="@id/btn_selectCat_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText_description_regular" />

    <Button
        android:id="@+id/btn_selectCat_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectCat"
        android:text="select"
        app:layout_constraintBottom_toTopOf="@id/editText_amount_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/acTextView_category_regular"
        app:layout_constraintTop_toBottomOf="@id/editText_description_regular" />

    <EditText
        android:id="@+id/editText_amount_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/activity_transaction_amount"
        android:inputType="numberDecimal"
        app:layout_constraintBottom_toTopOf="@id/linearLayout_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/acTextView_category_regular" />


    <LinearLayout
        android:id="@+id/linearLayout_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linearLayout2_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_amount_regular">

        <RadioGroup
            android:id="@+id/radioTrans_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radioButton_receipts">

            <RadioButton
                android:id="@+id/radioButton_receipts_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/activity_main_receipts" />

            <RadioButton
                android:id="@+id/radioButton_spending_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_main_spending" />

        </RadioGroup>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/editText_day_regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/day"
            android:inputType="number"
            android:text="1" />

        <Spinner
            android:id="@+id/spinner_Month_regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/months"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/linearLayout3_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_regular">

        <Button
            android:id="@+id/button_saveAndClose_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="saveAndClose"
            android:text="@string/activity_transaction_saveAclose" />

        <Button
            android:id="@+id/button_delete_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="delete"
            android:text="@string/activity_transaction_delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3_regular"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2_regular">

        <Button
            android:id="@+id/button_save_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="save"
            android:text="@string/activity_transaction_save" />

        <Button
            android:id="@+id/button_copy_regular"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="copy"
            android:text="@string/activity_transaction_copy" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>